#!/bin/bash
# -*- mode: sh; coding: utf-8-unix -*-

function usage_exit() {
    local command_name
    command_name=$(basename "$0")

    cat << EOF >&2
Usage: $command_name target
       $command_name -h
EOF
    exit $1
}

while getopts :h opt; do
    case $opt in
        h)
            usage_exit 0
            ;;
        \?)
            usage_exit 2
            ;;
    esac
done

shift $((OPTIND - 1))

if [ $# -ne 1 ]; then
    usage_exit 2
fi

# ターゲットファイルが存在するか？
if [ -e "$1" ]; then
    target_path=$(readlink -m -- "$1")

    # ターゲットファイルはファイルか？
    if [ -f "$target_path" ]; then
        file_name=$(basename -- "$target_path")

        # ウィンドウのタイトルにファイル名の文字列を含むものがあればポップアップする
        if winactivate "$file_name"; then
            exit 0
        fi
    fi
fi

cygstart -- "$1"
